int swap (card *a, card *b){
  card temp;
  temp = *a;
  *a = *b;
  *b = temp;
  return 0;
}

int shuffle( card * deck) {
  srand ( time(NULL) );
  int n = sizeof(deck);
  int i;
  for (i = n-1; i>0; i--) {
    int j = rand() % (i+1);
    swap(&deck[i], &deck[j]);
  }
  return 0;
}

